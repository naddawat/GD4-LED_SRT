<Page x:Class="GD4_LED.page.PopupRefill"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Refill Medicine" Height="600" Width="787">

    <Page.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#212529"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#ADB5BD"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#007BFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5A6268"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#545B62"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#218838"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E7E34"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Popup Styles -->
        <Style x:Key="PopupOverlayStyle" TargetType="Grid">
            <Setter Property="Background" Value="#80000000"/>
        </Style>

        <Style x:Key="PopupCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" Opacity="0.2" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid x:Name="RefillPopupOverlay" 
          Style="{StaticResource PopupOverlayStyle}" 
          Panel.ZIndex="999" Margin="0,0,336,0">

        <Border Style="{StaticResource PopupCardStyle}" 
            MaxWidth="500" 
            MinWidth="450"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" Height="639" Width="450">

            <StackPanel>
                <!-- Header -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="เติมยา" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#212529"/>
                        <TextBlock Text="เพิ่มจำนวนยาในสต็อก" 
                               FontSize="14" 
                               Foreground="#6C757D" 
                               Margin="0,4,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1" 
                        Content="✕" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        FontSize="18" 
                        Foreground="#6C757D" 
                        Width="32" 
                        Height="32" 
                        Cursor="Hand"
                        Click="CloseRefillPopup_Click"/>
                </Grid>

                <!-- Drug Information Card -->
                <Border Background="#F8F9FA" 
                    CornerRadius="12" 
                    Padding="20" 
                    Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="DrugCodeText" Text="CODE001" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#212529"/>
                            <TextBlock x:Name="DrugNameText" Text="Paracetamol 500mg" 
                                   FontSize="14" 
                                   Foreground="#495057" 
                                   Margin="0,4,0,8"/>
                            <TextBlock x:Name="LocationText" Text="ตำแหน่ง: A1-01" 
                                   FontSize="12" 
                                   Foreground="#6C757D"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="คงเหลือปัจจุบัน" 
                                   FontSize="12" 
                                   Foreground="#6C757D" 
                                   HorizontalAlignment="Center"/>
                            <TextBlock x:Name="QuantityText" Text="50" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="#007BFF" 
                                   HorizontalAlignment="Center"/>
                            <TextBlock x:Name="UnitText" Text="แผง" 
                                   FontSize="12" 
                                   Foreground="#6C757D" 
                                   HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Input Form -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- จำนวนที่เติม -->
                    <StackPanel Grid.Row="0" Grid.ColumnSpan="3">
                        <TextBlock Text="จำนวนที่ต้องการเติม *" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#495057" 
                               Margin="0,0,0,8"/>
                        <TextBox x:Name="RefillQuantityTextBox" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Text="0"/>
                    </StackPanel>

                    <!-- Lot Number -->
                    <StackPanel Grid.Row="2" Grid.Column="0">
                        <TextBlock Text="Lot Number *" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#495057" 
                               Margin="0,0,0,8"/>
                        <TextBox x:Name="RefillLotTextBox" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Text="LOT001"/>
                    </StackPanel>

                    <!-- Expiry Date -->
                    <StackPanel Grid.Row="2" Grid.Column="2">
                        <TextBlock Text="วันหมดอายุ *" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#495057" 
                               Margin="0,0,0,8"/>
                        <DatePicker x:Name="RefillExpiryDatePicker" 
                                Height="48" 
                                FontSize="14"/>
                    </StackPanel>

                    <!-- หมายเหตุ -->
                    <StackPanel Grid.Row="4" Grid.ColumnSpan="3">
                        <TextBlock Text="หมายเหตุ" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#495057" 
                               Margin="0,0,0,8"/>
                        <TextBox x:Name="RefillNotesTextBox" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalContentAlignment="Top"
                             Text=""/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="6" Grid.ColumnSpan="3" Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                            Content="ยกเลิก" 
                            Style="{StaticResource CancelButtonStyle}"
                            Click="CancelRefill_Click"/>

                        <Button Grid.Column="2" 
                            Content="ยืนยันเติมยา" 
                            Style="{StaticResource SuccessButtonStyle}"
                            Click="ConfirmRefill_Click"/>
                    </Grid>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>