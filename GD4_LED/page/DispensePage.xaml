<Page x:Class="GD4_LED.page.DispensePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="800"
      Background="{StaticResource BackgroundGray}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search and Filter Section - Fixed at top -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,24,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                             Text="ค้นหาใบสั่งยา" 
                             Style="{StaticResource SubHeaderTextStyle}"/>

                <Grid Grid.Row="2" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search TextBox -->
                    <Border Grid.Column="0" 
                              Background="White" 
                              CornerRadius="8"
                              BorderBrush="{StaticResource TextSecondary}"
                              BorderThickness="1"
                              Height="48">
                        <Grid>
                            <TextBlock Text="ค้นหาด้วย HN, ชื่อ, เลขใบสั่งยา..." 
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="16,0,0,0"
                                         VerticalAlignment="Center"
                                         x:Name="SearchPlaceholder"/>
                            <TextBox Background="Transparent"
                                       BorderThickness="0"
                                       FontSize="14"
                                       Padding="16,12"
                                       VerticalAlignment="Center"
                                       x:Name="SearchTextBox"
                                       TextChanged="SearchTextBox_TextChanged"/>
                        </Grid>
                    </Border>

                    <!-- Date Picker -->
                    <Border Grid.Column="2" 
                              Background="White" 
                              CornerRadius="8"
                              BorderBrush="{StaticResource TextSecondary}"
                              BorderThickness="1"
                              Height="48"
                              Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                         Text="10/09/2025"
                                         VerticalAlignment="Center"
                                         FontSize="14"/>
                            <Path Grid.Column="1" 
                                    Data="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"
                                    Fill="{StaticResource TextSecondary}"
                                    Stretch="Uniform"
                                    Width="16" Height="16"/>
                        </Grid>
                    </Border>

                    <Button Grid.Column="4" 
                              Content="ค้นหา" 
                              Style="{StaticResource PrimaryButtonStyle}"
                              Height="48" Click="SearchButton_Click" />
                </Grid>
            </Grid>
        </Border>

        <!-- Summary Statistics - Fixed at top -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0">
                <StackPanel>
                    <TextBlock Text="รอจัด" Style="{StaticResource SecondaryTextStyle}" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="PendingCountText" Text="0" FontSize="35" FontWeight="Bold" Foreground="{StaticResource Warning}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="0">
                <StackPanel>
                    <TextBlock Text="เสร็จแล้ว" Style="{StaticResource SecondaryTextStyle}" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="CompletedCountText" Text="0" FontSize="35" FontWeight="Bold" Foreground="{StaticResource Success}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="4" Style="{StaticResource CardStyle}" Margin="0">
                <StackPanel>
                    <TextBlock Text="ทั้งหมด" Style="{StaticResource SecondaryTextStyle}" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="TotalCountText" Text="0" FontSize="35" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Scrollable Medicine Cards -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,16,0,24">
            <StackPanel x:Name="PrescriptionPanel">
                <!-- Cards will be generated here dynamically -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>