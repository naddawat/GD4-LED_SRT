<Page x:Class="GD4_LED.page.DispensePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="800"
      Background="{StaticResource BackgroundGray}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,24,0,24">
        <StackPanel>
            <!-- Search and Filter Section -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="187*"/>
                        <ColumnDefinition Width="161*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                                 Text="ค้นหาใบสั่งยา" 
                                 Style="{StaticResource SubHeaderTextStyle}" Grid.ColumnSpan="2"/>

                    <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,24,0,0" Grid.RowSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search TextBox with simplified placeholder -->
                        <Border Grid.Column="0" 
                                  Background="White" 
                                  CornerRadius="8"
                                  BorderBrush="{StaticResource TextSecondary}"
                                  BorderThickness="1"
                                  Height="48">
                            <Grid>
                                <TextBlock Text="ค้นหาด้วย HN, ชื่อ, เลขใบสั่งยา..." 
                                             Foreground="{StaticResource TextSecondary}"
                                             Margin="16,0,0,0"
                                             VerticalAlignment="Center"
                                             x:Name="SearchPlaceholder"/>
                                <TextBox Background="Transparent"
                                           BorderThickness="0"
                                           FontSize="14"
                                           Padding="16,12"
                                           VerticalAlignment="Center"
                                           x:Name="SearchTextBox"/>
                            </Grid>
                        </Border>

                        <!-- Date Picker -->
                        <Border Grid.Column="2" 
                                  Background="White" 
                                  CornerRadius="8"
                                  BorderBrush="{StaticResource TextSecondary}"
                                  BorderThickness="1"
                                  Height="48"
                                  Padding="16,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                             Text="10/09/2025"
                                             VerticalAlignment="Top"
                                             FontSize="14" Margin="0,2,0,0"/>
                                <Path Grid.Column="1" 
                                        Data="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"
                                        Fill="{StaticResource TextSecondary}"
                                        Stretch="Uniform"
                                        Width="16" Height="16"/>
                            </Grid>
                        </Border>

                        <Button Grid.Column="4" 
                                  Content="ค้นหา5" 
                                  Style="{StaticResource PrimaryButtonStyle}"
                                  Height="48" />
                    </Grid>
                </Grid>
            </Border>

            <!-- Summary Statistics -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="23*"/>
                    <ColumnDefinition Width="222*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="245*"/>
                    <ColumnDefinition Width="245*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0" Grid.ColumnSpan="2">
                    <StackPanel>
                        <TextBlock Text="รอจัด" Style="{StaticResource SecondaryTextStyle}"/>
                        <TextBlock Text="24" FontSize="32" FontWeight="Bold" Foreground="{StaticResource Warning}"/>
                    </StackPanel>
                </Border>

                <!--<Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0,8,0">
                        <StackPanel>
                            <TextBlock Text="กำลังจัด" Style="{StaticResource SecondaryTextStyle}"/>
                            <TextBlock Text="8" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}"/>
                        </StackPanel>
                    </Border>-->

                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="8,0,8,0" Grid.ColumnSpan="2">
                    <StackPanel>
                        <TextBlock Text="เสร็จแล้ว" Style="{StaticResource SecondaryTextStyle}"/>
                        <TextBlock Text="156" FontSize="32" FontWeight="Bold" Foreground="{StaticResource Success}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Style="{StaticResource CardStyle}" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ทั้งหมด" Style="{StaticResource SecondaryTextStyle}"/>
                        <TextBlock Text="188" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Medicine Cards -->
            <StackPanel>
                <!-- Sample Medicine Card 1 -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Patient Info -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                            <Border Background="{StaticResource Warning}" 
                                      CornerRadius="4" 
                                      Padding="8,4">
                                <TextBlock Text="รอจัด" 
                                             Foreground="White" 
                                             FontSize="10" 
                                             FontWeight="Bold"/>
                            </Border>
                            <TextBlock Text="นายทดสอบ จ่ายยา1" 
                                         Style="{StaticResource SubHeaderTextStyle}"
                                         Margin="12,0,0,0"/>
                            <TextBlock Text="HN: 123456789" 
                                         Style="{StaticResource SecondaryTextStyle}"
                                         Margin="16,0,0,0"
                                         VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Prescription Info -->
                        <Grid Grid.Row="2" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="เลขใบสั่งยา: PR240910001" Style="{StaticResource BodyTextStyle}"/>
                                <TextBlock Text="Code: PARA500" Style="{StaticResource SecondaryTextStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="หอผู้ป่วย: ICU" Style="{StaticResource BodyTextStyle}"/>
                                <TextBlock Text="เตียง: A-12" Style="{StaticResource SecondaryTextStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Medicine Details -->
                        <StackPanel Grid.Row="4" Grid.Column="0"/>

                        <!-- Action Button -->
                        <Button Grid.Row="0" Grid.RowSpan="5" Grid.Column="1" 
                                  Content="พิมพ์" 
                                  Style="{StaticResource PrintButtonStyle}"
                                  VerticalAlignment="Center"
                                  Width="120"/>
                    </Grid>
                </Border>

                <!-- Sample Medicine Card 2 -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Patient Info -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                            <Border Background="{StaticResource Warning}" 
                                      CornerRadius="4" 
                                      Padding="8,4">
                                <TextBlock Text="รอจัด" 
                                             Foreground="White" 
                                             FontSize="10" 
                                             FontWeight="Bold"/>
                            </Border>
                            <TextBlock Text="นายทดสอบ จ่ายยา2" 
                                         Style="{StaticResource SubHeaderTextStyle}"
                                         Margin="12,0,0,0"/>
                            <TextBlock Text="HN: 987654321" 
                                         Style="{StaticResource SecondaryTextStyle}"
                                         Margin="16,0,0,0"
                                         VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Prescription Info -->
                        <Grid Grid.Row="2" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="เลขใบสั่งยา: PR240910002" Style="{StaticResource BodyTextStyle}"/>
                                <TextBlock Text="Code: AMOX500" Style="{StaticResource SecondaryTextStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="หอผู้ป่วย: Med1" Style="{StaticResource BodyTextStyle}"/>
                                <TextBlock Text="เตียง: B-05" Style="{StaticResource SecondaryTextStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Medicine Details -->
                        <StackPanel Grid.Row="4" Grid.Column="0"/>

                        <!-- Action Button -->
                        <Button Grid.Row="0" Grid.RowSpan="5" Grid.Column="1" 
                                  Content="พิมพ์" 
                                  Style="{StaticResource PrintButtonStyle}"
                                  VerticalAlignment="Center"
                                  Width="120"/>
                    </Grid>
                </Border>

                <!-- Sample Medicine Card 3 -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Patient Info -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                            <Border Background="{StaticResource Warning}" 
                                      CornerRadius="4" 
                                      Padding="8,4">
                                <TextBlock Text="รอจัด" 
                                             Foreground="White" 
                                             FontSize="10" 
                                             FontWeight="Bold"/>
                            </Border>
                            <TextBlock Text="นายทดสอบ จ่ายยา3" 
                                         Style="{StaticResource SubHeaderTextStyle}"
                                         Margin="12,0,0,0"/>
                            <TextBlock Text="HN: 456789123" 
                                         Style="{StaticResource SecondaryTextStyle}"
                                         Margin="16,0,0,0"
                                         VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Prescription Info -->
                        <Grid Grid.Row="2" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="เลขใบสั่งยา: PR240910003" Style="{StaticResource BodyTextStyle}"/>
                                <TextBlock Text="Code: INSU100" Style="{StaticResource SecondaryTextStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="หอผู้ป่วย: ER" Style="{StaticResource BodyTextStyle}"/>
                                <TextBlock Text="เตียง: ER-03" Style="{StaticResource SecondaryTextStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Medicine Details -->
                        <StackPanel Grid.Row="4" Grid.Column="0"/>

                        <!-- Action Button -->
                        <Button Grid.Row="0" Grid.RowSpan="5" Grid.Column="1" 
                                  Content="พิมพ์" 
                                  Style="{StaticResource PrintButtonStyle}"
                                  VerticalAlignment="Center"
                                  Width="120"/>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>